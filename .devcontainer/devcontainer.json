// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/eliises/devcontainer-features/devcontainers-cli:1": {},
		"ghcr.io/hspaans/devcontainer-features/django-upgrade:1": {}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	"customizations": { // extensões
	"vscode": {
	 "extensions": [ // extensões do vscode
	   "esbenp.prettier-vscode", // ferramenta de formatação de código
	   "dbaeumer.vscode-eslint", // identificar e corrigir problemas no código.
		"ms-azuretools.vscode-docker", // extensão do docker
		"ms-vscode-remote.remote-containers", // extensão do remote containers
		"github.vscode-github-actions", // github actions
		"github.copilot", // github copilot
		"github.copilot-chat", // github copilot chat
		"vscode-icons-team.vscode-icons" // ícones para pastas do vscode 
	 ]
	}
  }
}